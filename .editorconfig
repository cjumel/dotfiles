root = true

[*]
charset = utf-8
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2
max_line_length = 100

[*.lua]
indent_style = space
indent_size = 2
max_line_length = 120

[*.md]
indent_style = space
indent_size = 2
max_line_length = 100

[*.proto]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

[*.toml]
indent_style = space
indent_size = 2
max_line_length = 100

[*.yaml]
indent_style = space
indent_size = 2
max_line_length = 100

[{*.sh,*.zsh,.zshenv,.zshrc,*.tmux}]
indent_style = space
indent_size = 4

[.gitconfig]
indent_style = tab
indent_size = 8

[Makefile]
# Require necessarily 8-long tab indentation to work
indent_style = tab
indent_size = 8
