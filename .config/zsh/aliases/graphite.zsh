# [G]raphi[T]e: a CLI to use a stacking workflow with Git

alias gta='gt add'             # [A]dd: add a file to the current branch or stack
alias gtaa='gt add --all'      # [A]dd [A]ll: add all files to the current branch or stack
alias gtc='gt create'          # [C]reate: create a branch or a stack
alias gtm='gt modify'          # [M]odify: modify the current branch or stack
alias gtsy='gt sync'           # [S]ync: synchronize the current branch or stack with the remote
alias gtss='gt submit --stack' # [S]ubmit: submit the current branch or stack
alias gtt='gt trunck'          # [T]runck: switch to the trunk branch
