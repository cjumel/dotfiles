# Aliases related to builtin JavaScript features

# [[ NPM ]]

alias npa='npm add'     # [NP]M [A]dd: add a package to the project dependencies
alias npi='npm install' # [NP]M [I]nstall: install all project dependencies
alias npl='npm list'    # [NP]M [L]ist: list installed project dependencies
alias npr='npm run'     # [NP]M [R]un: run a project script
alias nprm='npm remove' # [NP]M [R]e[M]ove: remove a package from the project dependencies
