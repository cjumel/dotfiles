{
  "title": "Better bracket key bindings",
  "rules": [
    {
      "description": "Swap < and > with [ and ]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {}
          },
          "to": [
            {
              "key_code": "5",
              "modifiers": ["option", "shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "hyphen",
              "modifiers": ["option", "shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "5",
            "modifiers": {
              "mandatory": ["option", "shift"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": []
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": ["option", "shift"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Cmd + shift + ( or ) to { or }",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "5",
            "modifiers": {
              "mandatory": ["command", "shift"]
            }
          },
          "to": [{ "key_code": "5", "modifiers": ["option"] }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": ["command", "shift"]
            }
          },
          "to": [{ "key_code": "hyphen", "modifiers": ["option"] }]
        }
      ]
    }
  ]
}
