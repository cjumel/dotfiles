{
  "title": "Home Row Mods",
  "rules": [
    {
      "description": "Home Row Mods",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "f", "modifiers": { "optional": ["any"] } },
          "to_if_alone": [{ "key_code": "f", "halt": true }],
          "to_if_held_down": [{ "key_code": "left_command" }],
          "to_delayed_action": { "to_if_canceled": [{ "key_code": "f" }] }
        },
