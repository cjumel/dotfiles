{
  "title": "Redefine control-combination keymaps for more terminal features",
  "rules": [
    {
      "description": "Remap <C-^> & <C-$> to <C-a> & <C-e>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["control"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "e",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-,> & <C-;> to <C-d> & <C-u>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "d",
              "modifiers": ["control"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "u",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-:> & <C-=> to <C-b> & <C-f>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["control"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "slash",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "f",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-BS> to <C-w>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "z",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-CR> to <C-r>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "r",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-ESC> to <C-c>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-%> to <C-^>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "6",
              "modifiers": ["control", "shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-`> to <C-_>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "equal_sign",
              "modifiers": ["control", "shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-<> to <C-]>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    }
  ]
}
