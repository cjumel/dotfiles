{
  "title": "Redefine control-combination keymaps for more terminal features",
  "rules": [
    {
      "description": "Remap <C-m> to <C-^>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "6",
              "modifiers": ["control", "shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-%> to <C-]>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-^> & <C-$> to <C-a> & <C-e>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["control"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "e",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap <C-,> & <C-;> to <C-d> & <C-u>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "d",
              "modifiers": ["control"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "u",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    }
  ]
}
