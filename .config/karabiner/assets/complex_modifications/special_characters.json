{
  "title": "Special characters",
  "rules": [
    {
      "description": "Make % one key stroke",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "quote" },
          "to": [{ "key_code": "quote", "modifiers": ["shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "quote", "modifiers": { "mandatory": ["shift"] } },
          "to": [{ "key_code": "quote" }]
        }
      ]
    },
    {
      "description": "Make ^ one key stroke",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "open_bracket", "modifiers": {} },
          "to": [{ "key_code": "open_bracket" }, { "key_code": "spacebar" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "open_bracket", "modifiers": { "mandatory": ["shift"] } },
          "to": [{ "key_code": "open_bracket" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "open_bracket", "modifiers": { "mandatory": ["option"] } },
          "to": [{ "key_code": "open_bracket", "modifiers": ["shift"] }]
        }
      ]
    },
    {
      "description": "Make ` one key stroke",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "backslash", "modifiers": {} },
          "to": [{ "key_code": "backslash" }, { "key_code": "spacebar" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "backslash", "modifiers": { "mandatory": ["shift"] } },
          "to": [{ "key_code": "backslash" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "backslash", "modifiers": { "mandatory": ["option"] } },
          "to": [{ "key_code": "backslash", "modifiers": ["shift"] }]
        }
      ]
    },
    {
      "description": "Make ~ two key strokes",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "n", "modifiers": { "mandatory": ["option"] } },
          "to": [{ "key_code": "n", "modifiers": ["option"] }, { "key_code": "spacebar" }]
        }
      ]
    },
    {
      "description": "Make | two key strokes",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "mandatory": ["option"] } },
          "to": [{ "key_code": "l", "modifiers": ["option", "shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "mandatory": ["option", "shift"] } },
          "to": [{ "key_code": "l", "modifiers": ["option"] }]
        }
      ]
    },
    {
      "description": "Make \\ two key strokes",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "period", "modifiers": { "mandatory": ["option"] } },
          "to": [{ "key_code": "period", "modifiers": ["option", "shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "period", "modifiers": { "mandatory": ["option", "shift"] } },
          "to": [{ "key_code": "period", "modifiers": ["option"] }]
        }
      ]
    },
    {
      "description": "Swap < and > with [ and ]",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "grave_accent_and_tilde", "modifiers": {} },
          "to": [{ "key_code": "5", "modifiers": ["option", "shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "grave_accent_and_tilde", "modifiers": { "mandatory": ["shift"] } },
          "to": [{ "key_code": "hyphen", "modifiers": ["option", "shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "5", "modifiers": { "mandatory": ["option", "shift"] } },
          "to": [{ "key_code": "grave_accent_and_tilde", "modifiers": [] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "hyphen", "modifiers": { "mandatory": ["option", "shift"] } },
          "to": [{ "key_code": "grave_accent_and_tilde", "modifiers": ["shift"] }]
        }
      ]
    },
    {
      "description": "Fix keypad period (actual period instead of comma)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "keypad_period", "modifiers": {} },
          "to": [{ "key_code": "comma", "modifiers": ["shift"] }]
        }
      ]
    }
  ]
}
