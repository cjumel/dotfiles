{
  "title": "Improve special keys bindings",
  "rules": [
    {
      "description": "Simpler | binding",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["option", "shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["option", "shift"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Simpler \\ binding",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "period",
              "modifiers": ["option", "shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["option", "shift"]
            }
          },
          "to": [
            {
              "key_code": "period",
              "modifiers": ["option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Simpler ~ binding",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": ["option"]
            },
            {
              "key_code": "spacebar"
            }
          ]
        }
      ]
    }
  ]
}
