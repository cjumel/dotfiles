{
  "title": "Fix keypad period key",
  "rules": [
    {
      "description": "Fix keypad period key to use it as an actual period and not a comma",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_period",
            "modifiers": {}
          },
          "to": [
            {
              "key_code": "comma",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    }
  ]
}
