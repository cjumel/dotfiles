{
  "title": "Magic Caps Lock",
  "rules": [
    {
      "description": "Make Caps Lock used as Ctrl modifier (when used with any key), Esc (when used alone) or the regular Caps Lock (when modified by Shift)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
                "optional": [
                  "command",
                  "option",
                  "control"
                ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
