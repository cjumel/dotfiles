{
  "title": "Simplify accents typing",
  "rules": [
    {
      "description": "Simplify ^ accent",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {}
          },
          "to": [
            {
              "key_code": "open_bracket"
            },
            {
              "key_code": "spacebar"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Simplify ` accent",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_pound",
            "modifiers": {}
          },
          "to": [
            {
              "key_code": "non_us_pound"
            },
            {
              "key_code": "spacebar"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_pound",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "non_us_pound"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_pound",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "non_us_pound",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    }
  ]
}
