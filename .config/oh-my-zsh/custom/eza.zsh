alias ls='eza' # Overide the builtin ls with eza; this will be applied to other aliases using `ls`

# `-T` is not an option of the builtin `ls` command
alias lt='eza -T'   # List tree: list files in directory & sub-directories in a tree-like format
alias lta='eza -Ta' # List tree all: list files in directory & sub-directories in a tree-like format, including hidden files
