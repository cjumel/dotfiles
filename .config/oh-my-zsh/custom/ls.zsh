# Some aliases, like `l` & `la` are already done by oh-my-zsh

alias l='ls'     # List files in directory
alias la='ls -a' # List files in directory, including hidden files

alias lr='ls -R'   # List files recursively in directory & sub-directories
alias lra='ls -Ra' # List files recursively in directory & sub-directories, including hidden files

alias ll='ls -l'   # List files in long format
alias lla='ls -la' # List files in long format, including hidden files
