[user]
	name = clementjumel
	email = clement.jumel@gmail.com
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/dotfiles/.gitignore
	autocrlf = input
	editor = nvim
[pull]
	rebase = true
[alias]
	lg = log --oneline --graph --decorate --color
[push]
  default = current
	autoSetupRemote = true
[diff]
  tool = nvim
[difftool "nvim"]
  cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[advice]
	skippedCherryPicks = false
[status]
	showUntrackedFiles = all
